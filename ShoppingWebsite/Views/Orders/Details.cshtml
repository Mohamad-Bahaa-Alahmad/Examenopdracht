@model ShoppingWebsite.Models.Order

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Order</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Address)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.HouseNr)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.HouseNr)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Gemeente)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Gemeente)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateTime)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateTime)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Products)
        </dt>
        <dd class = "col-sm-10">
             
            @foreach(var product in @Model.Products)
                    {
                        <p>@product.Title</p>
                        <img src="~/Images/@product.ImagePath" alt="Card Image" class="card-img-top" style="height: 50px; width: 50px;"/>
                    }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
