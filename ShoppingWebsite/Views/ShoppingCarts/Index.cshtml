@model IEnumerable<Product>
@{
    ViewData["Title"] = "Index";
}

<h1>Shoppin Cart</h1>


<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Price</th>
            <th>Image</th>
            <th>Remove</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {


            @foreach (Product item in Model)
            {
                <tr>
                    <td>@item.Title</td>
                    <td>@item.Description</td>
                    <td>@item.Price</td>
                    <td> <img src="~/Images/@item.ImagePath" alt="Card Image" class="card-img-top" style="height: 50px; width: 50px" /></td>
                    <td>
                        <a asp-action="Remove" asp-controller="ShoppingCarts" asp-route-id="@item.Id">Remove</a> |
                    </td>
                </tr>
               
            }
            @if (User.Identity.IsAuthenticated){
              <tr><td><a asp-action="Create" asp-controller="Orders" >Order</a> </td></tr>  
              } 
        }
    </tbody>
</table>
